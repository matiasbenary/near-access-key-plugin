    "@near-js/types": "^2.5.1",
    "@near-js/utils": "^2.5.1",
    "@near-js/keystores": "^2.5.1",
    "@near-js/tokens": "^2.5.1",
    "@hot-labs/near-connect": "^0.6.11"
